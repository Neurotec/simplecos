    <th></th>
  </tr>

<% @public_carriers.each do |public_carrier| %>
  <tr>
    <td><%= public_carrier.sip_profile ? public_carrier.sip_profile.name : "" %></td>
    <td><%= public_carrier.name %></td>
    <td><%= public_carrier.sip_user %></td>
    <td><%= public_carrier.sip_pass %></td>
    <td><%= public_carrier.authenticate %></td>
    <td><%= public_carrier.ip %></td>
    <td><%= public_carrier.port %></td>
    <td><%= link_to I18n.t('show'), public_carrier %></td>
    <td><%= link_to I18n.t('edit'), edit_public_carrier_path(public_carrier) %></td>
    <td><%= link_to I18n.t('destroy'), public_carrier, method: :delete, data: { confirm: I18n.t('are_you_sure') } %></td>
  </tr>
<% end %>
</table>

