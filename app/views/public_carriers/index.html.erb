<h1><%= I18n.t('public_carrier.index.title')%></h1>

<table>
  <tr>
    <th><%= I18n.t('public_carrier.l.sip_profile')%></th>
    <th><%= I18n.t('public_carrier.l.name')%></th>
    <th><%= I18n.t('public_carrier.l.sip_user')%></th>
    <th><%= I18n.t('public_carrier.l.sip_pass')%></th>
    <th><%= I18n.t('public_carrier.l.authenticate')%></th>
