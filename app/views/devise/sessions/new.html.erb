<%= form_for(resource, {:as => resource_name, :url => session_path(resource_name), :html => { class: 'form-signin'}}) do |f| %>
      <h2 class="form-signin-heading">
	Tarificador
      </h2>
      <div class="form-group">
	<%= f.email_field :email, placeholder: 'Email', class: "form-control", style: "width: 100%" %>
	<%= f.password_field :password, placeholder: 'Password', required: "" , class: "form-control", style: "width: 100%" %>
      </div>
<!--
  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me, class: "checkbox" %></div>
  <% end -%>
-->
  <%= f.submit I18n.t('user.l.sign_in'), class: "btn btn-lg btn-primary btn-block" %>
<% end %>

<%= render "devise/shared/links" %>
