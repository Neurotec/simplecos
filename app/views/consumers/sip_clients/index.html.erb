<% @sip_clients.each do |sip_client| %>
  <tr>
    <td><%= sip_client.sip_user %></td>
    <td><%= sip_client.sip_pass %></td>
    <td><%= sip_client.proxy_media %></td>
    <td><%= sip_client.max_calls %></td>
    <td><%= link_to I18n.t('show'), consumers_sip_client_path(sip_client) %></td>
