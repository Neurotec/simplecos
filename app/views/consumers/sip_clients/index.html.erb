<h1><%= I18n.t('sip_clients.index.title')%> <%= @client.name %></h1>

<table>
  <tr>
    <th><%= I18n.t('sip_clients.l.sip_user')%></th>
    <th><%= I18n.t('sip_clients.l.sip_pass')%></th>
    <th><%= I18n.t('sip_clients.l.proxy_media')%></th>
    <th><%= I18n.t('sip_clients.l.max_calls')%></th>
