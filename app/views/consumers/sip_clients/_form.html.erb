    <%= f.text_field :caller_number %><br />
  </div>

  <hr/>
  <div class="field">
    <%= f.label :sip_user %><br />
    <%= f.text_field :sip_user %>
  </div>
  <div class="field">
    <%= f.label :sip_pass %><br />
    <%= f.text_field :sip_pass %>
  </div>
  <div class="field">
    <%= f.label :max_calls %><br />
    <%= f.text_field :max_calls %>
  </div>
  <div class="field">
    <%= f.label :proxy_media %><br />
    <%= f.collection_radio_buttons :proxy_media, [['ningun','ningun'],['media','media'],['bypass','bypass']],:first, :last%>
