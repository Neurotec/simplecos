<%= simple_form_for(@sip_client) do |f| %>
  <% if @sip_client.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@sip_client.errors.count, "error") %> prohibited this sip_client from being saved:</h2>

      <ul>
      <% @sip_client.errors.full_messages.each do |msg| %>
