<h1><%= I18n.t('client.index.title')%></h1>

<table>
  <tr>
    <th><%= I18n.t('client.l.accountcode')%></th>
    <th><%= I18n.t('client.l.public_carrier')%></th>
    <th><%= I18n.t('client.l.name')%></th>
    <th><%= I18n.t('client.l.balance')%></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @clients.each do |client| %>
  <tr>
    <td><%= client.accountcode%></td>
    <td><%= client.public_carrier.name if client.public_carrier %></td>
    <td><%= client.name %></td>
    <td><%= client.balance %></td>
    <td><%= link_to I18n.t('show'), client %></td>
    <td><%= link_to I18n.t('edit'), edit_client_path(client) %></td>
    <td><%= link_to I18n.t('client_cash_plan.index.title'), client_cash_plans_path(:client_id => client.id)%></td>
    <td><%= link_to I18n.t('sip_clients.index.title'), sip_clients_path(:client_id => client.id)%></td>
    <td><%= link_to I18n.t('destroy'), client, method: :delete, data: { confirm: I18n.t('are_you_sure') } %></td>
  </tr>
<% end %>
</table>

<br />

