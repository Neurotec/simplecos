<h1><%= I18n.t('trunk.index.title')%>: <%= @public_carrier.name%></h1>

<table>
  <tr>
    <th>Name</th>
    <th>Ip</th>
    <th>Port</th>
    <th>Sip user</th>
    <th>Sip pass</th>
    <th>Authenticate</th>
    <th>Bridge</th>
    <th>Public carrier</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @trunks.each do |trunk| %>
  <tr>
    <td><%= trunk.name %></td>
    <td><%= trunk.ip %></td>
    <td><%= trunk.port %></td>
    <td><%= trunk.sip_user %></td>
    <td><%= trunk.sip_pass %></td>
    <td><%= trunk.authenticate %></td>
    <td><%= trunk.bridge %></td>
    <td><%= trunk.public_carrier ? trunk.public_carrier.name : '' %></td>
    <td><%= link_to I18n.t('show'), trunk %></td>
    <td><%= link_to I18n.t('edit'), edit_trunk_path(trunk) %></td>
    <td><%= link_to I18n.t('destroy'), trunk, method: :delete, data: { confirm: I18n.t('are_you_sure') } %></td>
  </tr>
<% end %>
</table>

<br />

<%= will_paginate @trunks%>
<%= link_to I18n.t('trunk.new.title'), new_trunk_path(:public_carrier_id => @public_carrier.id) %>
